
@model SchoolManagementSystem.Models.Staffclassification
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-controller="StaffClassification" asp-action="Create">
    <div>
    <div class="border p-3">
        <div class="form-group row">
            <h1 class="text-info p1-3">Add Staff</h1>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StaffTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StaffTypeId" class="form-control" />
                        <span asp-validation-for="StaffTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TypeName" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col-4 offset-4">
                            <input type="submit" class="btn btn-info w-100" value="Add" />
                        </div>
                        <div class="col">
                            @if (ViewBag.Message != null)
                            {
                                <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: lightyellow;top: 2px " asp-area="" asp-controller="StaffClassification" asp- asp-action="Get">Get StaffClassification</a>
                                //<a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-area="" asp-controller="TeachingStaffDetail" asp- asp-action="Create">Get All TeachingStaffDetail</a>
                                <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                                </script>
                            }
                        </div>
                    @*</div>*@
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>
