
@model IEnumerable<SchoolManagementSystem.Models.TimeTable>
    @{
    ViewData["Title"] = "Create TimeTable";
    }

    <div class="col-6">
        <h2 class="text-primary">TimeTable</h2>
    </div>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h4>TimeTable List</h4>
            </div>
            <div class="col-12">
                <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px;
                    background-color: #00b9ff;float: right" asp-area="" asp-controller="TimeTable"  asp-action="Create">Register</a>
            </div>
        </div>
        @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ClassId
                    </th>
                    <th>
                        TimeTableId
                    </th>
                    <th>
                        TeacherId
                    </th>
                    <th>
                        SessionNumber
                    </th>
                    <th>
                        Timings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">@obj.ClassId</td>
                    <td width="30%">@obj.TimeTableId</td>
                    <td width="20%">@obj.TeacherId</td>
                    <td width="20%">@obj.SessionNumber</td>
                    <td width="20%">@obj.Timings</td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TimeTable" asp-route-Id="@obj.TimeTableId" asp-action="Update" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a asp-controller="TimeTable" asp-route-Id="@obj.TimeTableId" asp-action="Delete" class="btn btn-danger mx-3">
                                <i class="far fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    </div>

