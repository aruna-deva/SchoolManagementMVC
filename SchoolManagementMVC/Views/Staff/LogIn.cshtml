@model SchoolManagementSystem.Models.User

@{
    ViewData["Title"] = "LogIn";
}

<form method="post" asp-controller="Staff" asp-action="LogIn">
    <div class="border p-3">
        <div class="form-group row">
            <h1 class="text-info p1-3">LogIn</h1>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StaffTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StaffTypeId" class="form-control" />
                        <span asp-validation-for="StaffTypeId" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TypeName" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4 offset-4">
                    <input type="submit" class="btn btn-info w-100" value="Submit" />
                </div>

            </div>
    </div>
    </div>
</form>



