
@model SchoolManagementSystem.Models.ClassRoom

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="ClassRoom" asp-action="Delete">
    <input asp-for="ClassroomId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h1 class="text-info p1-3">Delete ClassRoom</h1>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ClassroomId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ClassroomId" class="form-control" />
                        <span asp-validation-for="ClassroomId" class="text-danger"></span>
                    </div>
                     <div class="col-4">
                        <label asp-for="Standard"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Standard" class="form-control" />
                        <span asp-validation-for="Standard" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Section"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Section" class="form-control" />
                        <span asp-validation-for="Section" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Delete" />
                    </div>
                    <div class="col">
                            @if (ViewBag.Message != null)
                            {
                        <a class="nav-link text-dark btn-primary font-weight-bold" style="position:relative; margin: 10px; background-color: lightyellow;float:right" asp-area="" asp-controller="ClassRoom" asp- asp-action="Get">Get ClassRoom</a>
                                <script type="text/javascript">
                                                    window.onload = function () {
                                                    alert("@ViewBag.Message");
                                                    };
                                </script>
                            }
                        </div>
                    @*</div>*@
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>

