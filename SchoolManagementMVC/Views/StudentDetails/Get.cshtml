
@model IEnumerable<SchoolManagementSystem.Models.StudentDetail>

@{
    ViewData["Title"] = "Students";
}

<div class="col-6">
    <h2 class="text-primary">Students</h2>
</div>

<div class="container p-3">
    <div class="row pt-10">
        <div class="col-6">
            <h4>Students List</h4>
        </div >
                <div class="container">
  <div class="btn-group">
    </h3><button type="button" class="nav-link text-dark btn-primary font-weight-bold" style="margin: 1px; background-color: #00b9ff;float: initial" asp-area="" asp-controller="StudentDetails" asp- asp-action="Get">StudentDetail</button></h3>
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
     <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="ClassRoom" asp- asp-action="Get">ClassRoom</a>
      <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="TeachingStaffdetail" asp- asp-action="Get"> TeachingStaffDetail</a>
      <a class="nav-link text-dark btn-primary font-weight-bold" style="background-color: #FFFFFF;float: left" asp-area="" asp-controller="StaffClassification" asp- asp-action="Get"> StaffClassification</a>

 </ul>
  </div>
        <div class="col-24">
            <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; 
                    background-color: #00b9ff;float: right" asp-area="" asp-controller="StudentDetails" asp- asp-action="Create">Register</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        StudentID
                    </th>
                    <th>
                        StudentName
                    </th>
                    <th>
                        FatherName
                    </th>
                    <th>
                        ClassID
                    </th>
                    <th>
                        BirthDate
                    </th>
                    <th>
                        BloodGroup
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Nationality
                    </th>
                    <th>
                        ContactNumber
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">@obj.StudentID</td>
                    <td width="30%">@obj.StudentName</td>
                    <td width="20%">@obj.FatherName</td>
                    <td width="20%">@obj.ClassId</td>
                    <td width="20%">@obj.BirthDate</td>
                    <td width="10%">@obj.BloodGroup</td>
                    <td width="40%">@obj.Address</td>
                    <td width="40%">@obj.City</td>
                    <td width="40%">@obj.Nationality</td>
                    <td width="40%">@obj.ContactNumber</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="StudentDetails" asp-route-Id="@obj.StudentID" asp-action="update" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a asp-controller="StudentDetails" asp-route-Id="@obj.StudentID" asp-action="Delete" class="btn btn-danger mx-3">
                                <i class="far fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>



